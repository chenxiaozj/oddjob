<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<oddjob>
  <job>
    <sequential id="some-jobs">
      <jobs>
        <variables id="vars">
          <apple>
            <identify id="my-apple">
              <value>
                <value value="A Red Apple" />
              </value>
            </identify>
          </apple>
          <results>
            <buffer />
          </results>
        </variables>
        <bean class="org.oddjob.util.DumpRegistryJob">
          <output>
            <value value="${vars.results}" />
          </output>
        </bean>
      </jobs>
    </sequential>
  </job>
</oddjob>
