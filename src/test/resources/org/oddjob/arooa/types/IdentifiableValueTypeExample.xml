<oddjob>
    <job>
        <sequential>
            <jobs>
                <variables id="vars">
                    <test>
                        <identify id="our-value">
                            <value>
                                <value value="Apples"/>
                            </value>
                        </identify>
                    </test>
                </variables>
                <echo>Checking ${vars.test} is ${our-value}</echo>
                <check value="${vars.test}" eq="${our-value}"/>
            </jobs>
        </sequential>
    </job>
</oddjob>