<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<oddjob>
  <job>
    <task-service id="hello-service" response="$${echo.text}">
      <requests>
        <input-text default="You" prompt="Your Name"
          property="some.name" />
      </requests>
      <job>
        <echo id="echo"><![CDATA[Hello ${some.name}.]]></echo>
      </job>
    </task-service>
  </job>
</oddjob>
