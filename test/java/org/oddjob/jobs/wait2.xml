<oddjob>
	<job>
		<parallel>
			<jobs>
				<sequential>
					<jobs>
						<wait pause="2000"/>
						<echo id="e">hello</echo>
					</jobs>
				</sequential>
				<sequential>
					<jobs>
						<wait for="${e}" state="complete"/>
						<echo id="test">${e.text}</echo>
					</jobs>
				</sequential>
			</jobs>
		</parallel>
	</job>
</oddjob>