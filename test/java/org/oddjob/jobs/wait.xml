<oddjob>
	<job>
		<parallel>
			<jobs>
				<sequential>
					<jobs>
						<wait pause="2000"/>
						<variables id="vars">
							<text>
								<value value="hello"/>
							</text>
						</variables>
					</jobs>
				</sequential>
				<sequential>
					<jobs>
						<wait for="${vars.text}"/>
						<echo id="test">${vars.text}</echo>
					</jobs>
				</sequential>
			</jobs>
		</parallel>
	</job>
</oddjob>