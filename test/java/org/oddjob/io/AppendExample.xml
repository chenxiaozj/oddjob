<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<oddjob id="this">
    <job>
        <sequential>
            <jobs>
                <variables id="vars">
                    <myFile>
                        <append file="${this.args[0]}/messages.txt"/>
                    </myFile>
                </variables>
                <echo>
                    <output>
                        <value value="${vars.myFile}"/>
                    </output><![CDATA[Hello World]]></echo>
                <echo>
                    <output>
                        <value value="${vars.myFile}"/>
                    </output><![CDATA[Goodbye World]]></echo>
            </jobs>
        </sequential>
    </job>
</oddjob>
