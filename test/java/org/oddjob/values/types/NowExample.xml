<oddjob id='this'>
    <job>
        <sequential>
            <jobs>
                <variables id='time'>
                    <now>
                        <now>
                            <clock>
                                <value value='${clock}'/>
                            </clock>
                        </now>
                    </now>
                    <formatted>
                        <format date='${time.now}' format="hh:mm a"/>
                    </formatted>
                </variables>
                <echo id='echo-time' text="The time now is ${time.fomatted}"/>
            </jobs>
        </sequential>
    </job>
</oddjob>
