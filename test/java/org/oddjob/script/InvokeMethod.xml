<oddjob>
    <job>
        <sequential>
            <jobs>
                <variables id='vars'>
                    <message>
                        <invoke function="greeting">
                            <source>
                                <bean
                                    class='org.oddjob.script.GreetingService'/>
                            </source>
                            <parameters>
                                <schedule>
                                    <date>
                                        <value value='${date}'/>
                                    </date>
                                    <schedule>
                                        <schedules:now
                                            xmlns:schedules="http://rgordon.co.uk/oddjob/schedules"/>
                                    </schedule>
                                </schedule>
                            </parameters>
                        </invoke>
                    </message>
                </variables>
                <echo id="echo-greeting" text="${vars.message}"/>
            </jobs>
        </sequential>
    </job>
</oddjob>
