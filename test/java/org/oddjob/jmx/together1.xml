<oddjob xmlns:jmx="http://rgordon.co.uk/oddjob/jmx">
	<job>
		<sequential>
			<jobs>
				<rmireg />
				<variables id='result' />
				<jmx:server id='server1'
					url='service:jmx:rmi://ignored/jndi/rmi://localhost/server1' root='${fruit}' />
				<jmx:client id='client1' url='${server1.address}' />
				<jmx:server id='server2'
					url='service:jmx:rmi://ignored/jndi/rmi://localhost/server2' root='${client1}' />
				<jmx:client id='client2' url='${server2.address}' />
				<echo id='fruit' text='apples' />
				<wait for='${client2/client1/fruit}' />
				<set>
					<values>
					 <value key='result.fruit' value='${client2/client1/fruit.text}' />
					</values>
				</set>
				<folder>
					<jobs>
						<sequential id='stopAll'>
							<jobs>
								<stop job='${client2}' />
								<stop job='${server2}' />
								<stop job='${client1}' />
								<stop job='${server1}' />
							</jobs>
						</sequential>
					</jobs>
				</folder>
			</jobs>
		</sequential>
	</job>
</oddjob>