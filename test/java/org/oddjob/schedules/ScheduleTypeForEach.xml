<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<oddjob id="this">
    <job>
        <sequential>
            <jobs>
                <variables id="vars">
                    <date>
                        <value value="${date}"/>
                    </date>
                </variables>
                <foreach>
                    <values>
                        <tokenizer text="1,2,3,4,5"/>
                    </values>
                    <configuration>
                        <xml>
                            <foreach>
                                <job>
                                    <sequential>
                                        <jobs>
                                            <variables id="time">
                                                <schedule>
                                                    <schedule>
                                                        <date>
                                                            <value value="${vars.date}"/>
                                                        </date>
                                                        <schedule>
                                                            <schedules:weekly from="Monday" to="Friday" xmlns:schedules="http://rgordon.co.uk/oddjob/schedules">
                                                                <refinement>
                                                                    <schedules:time from="10:30"/>
                                                                </refinement>
                                                            </schedules:weekly>
                                                        </schedule>
                                                    </schedule>
                                                </schedule>
                                            </variables>
                                            <echo text="${time.schedule.current}"/>
                                            <set>
                                                <values>
                                                    <value key="vars.date" value="${time.schedule.current.useNext}"/>
                                                </values>
                                            </set>
                                        </jobs>
                                    </sequential>
                                </job>
                            </foreach>
                        </xml>
                    </configuration>
                </foreach>
            </jobs>
        </sequential>
    </job>
</oddjob>
