<schedules:dayafter xmlns:schedules="http://rgordon.co.uk/oddjob/schedules">
    <refinement>
        <schedules:dayofmonth from="25" to="0">
            <refinement>
                <schedules:last>
                    <refinement>
                        <schedules:dayofweek 
                                from="1"
                                to="5">
                            <refinement>
                                <schedules:time at="02:00"/>
                            </refinement>
                        </schedules:dayofweek>
                    </refinement>
                </schedules:last>
            </refinement>
        </schedules:dayofmonth>
    </refinement>
</schedules:dayafter>
